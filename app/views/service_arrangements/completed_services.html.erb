<div class="row">
  <div class="col-lg-12">
    <h2 class="page-header">   
      Servicios que <%= link_to @user.name, @user %> ha realizado
    </h2>
  </div>
</div>

<div class="row" id="store-list">
  <div class="col-lg-12">

    <%= paginate @arrangements %>
    <% @arrangements.each do |arrangement| %>
      <div class="panel">
        <div class="panel-body">
          <div class="row">

            <div class="col-sm-12">
              <h4 class="title-store">
                <strong>
                  <%= link_to arrangement.service.title, arrangement %>
                </strong>
              </h4>
              <hr>
              <p><%= arrangement.service.description %></p>
              <p>
                <strong>Usuario Cliente:</strong>
                <%= link_to arrangement.client.name, arrangement.client %>
              </p>
              <p>
                <strong>Fecha de Inicio:</strong>
                <%= arrangement.start_date %>
              </p>
              <p>
                <strong>Fecha de Entrega:</strong>
                <%= arrangement.end_date %>
              </p>
              <hr>
              <p>
                <div class="btn btn-primary">
                  <strong>Puntos Transferidos: </strong><%= arrangement.service.cost %> puntos
                </div> 
                <% if arrangement.review %>                              
                  <div class="pull-right">
                    Calificaci√≥n:
                    <% rating = arrangement.review.rating %>
                    <% rating.times do %>
                      <i class="fa fa-star filled-star" ></i>
                    <% end %>
                    <% (5-rating).times do %>
                      <i class="fa fa-star-o filled-star" ></i>
                    <% end %>
                  </div>
                <% else %>
                  <div class="btn btn-warning pull-right">
                    Aun no calificado
                  </div>
                <% end %>                
              </p>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    <%= paginate @arrangements %>
    
  </div>
</div>