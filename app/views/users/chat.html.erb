<div class="row">
  <div class="col-lg-12">
    <h2 class="page-header">Chatea con <b><%= @user.name %></b></h2>
  </div>
</div>

<div class="panel">
  <div class="panel-body">
    <div class="row">
      <div class="col-sm-12">
        <div class="alert alert-success">
          <b>Usa el siguiente nick en el chat: <%= "cadena_favores_#{current_user.name}" %></b>
        </div>
        <% chat_url = "https://kiwiirc.com/client/irc.kiwiirc.com/?&theme=mini##{@chat_channel}" %>
        <iframe src="<%= chat_url %>" style="border:0; width:100%; height:450px;"></iframe>
      </div>
    </div>
  </div>
</div>