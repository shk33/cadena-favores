<%= form_for @user, url: signup_path do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

    <%= f.label :name, "Nombre" %>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Nombre' %>

    <%= f.label :email %>
    <%= f.text_field :email, class: 'form-control', placeholder: 'Email' %>

    <%= f.label :password, "Contraseña" %>
    <%= f.password_field :password, class: 'form-control', placeholder: 'Contraseña' %>

    <%= f.label :password_confirmation, "Confirma tu Cotraseña" %>
    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirma tu Contraseña' %>
    <br>
    <p class="text-center">
      <%= f.submit "Regístrate", class: 'btn btn-lg btn-theme' %>
    </p>
<% end %>
