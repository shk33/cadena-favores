<div class="row">
  <div class="col-lg-12">
    <h2 class="page-header">
      Detalles de la solicitud de servicio   
    </h2>
  </div>
</div>

<div class="row" id="real-estates-detail">

  <div class="col-lg-4 col-md-4 col-xs-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <header class="panel-title">
          <div class="text-center">
            <strong>Solicitante</strong>
          </div>
        </header>
      </div>
      <div class="panel-body">
        <div class="text-center" id="author">
          <%= image_tag @service_request.user.profile.picture.url if @service_request.user.profile.picture? %>
          <%= link_to @service_request.user do %>
            <h3><%= @service_request.user.name %></h3>
          <% end %>
          <p><%= @service_request.user.profile.description %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="col-lg-8 col-md-8 col-xs-12">
    <div class="row" id="property-list" >
      <div class="panel">
        <div class="panel-body">
          <div class="row">
            <div class="col-sm-12">
              <h4 class="title-real-estates">
                <strong><a href="#"><%= @service.title %></a></strong>
                <span class="pull-right"><%= @service.cost %> puntos</span>
              </h4>
              <hr>
              <p>
                <%= @service.description %>
              </p>
              <hr>
              <p>
                <% @service_request.tags.each do |tag| %>
                  <span class="label label-danger"><%= tag.name %></span>
                <% end %>
              </p>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-10"></div>
            <div class="col-lg-2">
              <% if @service_request.open? %>
                <%= form_for [@service_request, Offer.new] do |f| %>
                  <%= f.submit "Ofertar", class: "btn btn-primary" %>
                <% end %>
              <% else %>
                <span class="label label-info">
                  Solicitud Cerrada
                </span>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

</div>

<div class="row">
  <div class="col-sm-offset-1 col-sm-10">
  <% if @service_request.open? %>
    <%= render 'offers_list' %>
  <% else %>
    <%= render 'accepted_offer_details' %>
  <% end %>
  </div>
</div>