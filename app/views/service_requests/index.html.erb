<div class="row">
  <div class="col-lg-12">
    <h2 class="page-header">Solicitudes de servicio</h2>
  </div>
</div>


<div class="row" id="store-list">
  <div class="col-lg-12">
    <h3>Mostrando resultados de: "<%= params[:search] %>"</h3>
    <% @service_requests.each do |request| %>

      <div class="panel">
        <div class="panel-body">
          <div class="row">

            <div class="col-sm-12">
              <h4 class="title-store">
                <strong>
                  <%= link_to request.service.title, request %>
                </strong>
              </h4>
              <hr>
              <p><%= request.service.description %></p>
              <p>
                <div class="btn btn-primary">
                  <strong>Costo: </strong><%= request.service.cost %> puntos
                </div>
                <%= link_to "Ver Detalles", request, class: "btn btn-warning pull-right" %>
              </p>
            </div>
          </div>
        </div>
      </div>
    <%end%>
  </div>
</div>

<%= paginate @service_requests %>