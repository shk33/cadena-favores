<div class="well">
  <h3>Nueva Transacción <i class=" fa fa-money icon"></i></h3>
  <hr>
  Has recibido del usuario
  <% if activity.trackable %>
    <!-- Variables -->
    <% transaction = activity.trackable %>
    <% sender      = transaction.sender %>
    <% service     = transaction.service_arrangement.service %>

    <!-- Impresión -->
    <%= link_to sender.name, sender %>
    la cantidad de <%= transaction.amount %> puntos 
    por realizar <%= link_to service.title, transaction.service_arrangement %>

  <% end %>
</div>